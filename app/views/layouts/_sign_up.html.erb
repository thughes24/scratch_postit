<h1>Create Account</h1>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "control-input" %>
  </div>
  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "control-input" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "control-input" %>
  </div>
  <%= f.submit "Create", class: "btn btn-lg btn-warning" %>
<% end %>

<%= link_to "Back", :back %>