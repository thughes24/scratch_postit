<div class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Post It", posts_path, class: "navbar-brand" %>
    </div>
    <ul class="nav navbar-nav">
      <li>
        <%= link_to "New Post", new_post_path %>
      </li>

      <li class="dropdown">
        <%= link_to '#', class: 'dropdown-toggle', 'data-toggle'=>'dropdown' do %>
          <%= "#{User.find(session[:user_id]).username}" %> <span class='caret'></span>
        <% end %>
        <ul class="dropdown-menu">
          <li>
            <%= link_to user_path(current_user.id) do %>
            <i class='glyphicon glyphicon-user'></i> View Profile
            <% end %>
          </li> 
          <li>
            <%= link_to "Logout", user_logout_path, method: 'post' %>
          </li>
        </ul>
      </li>
      <li class="dropdown">
        <%= link_to '#', class: 'dropdown-toggle', 'data-toggle'=>'dropdown' do %>
          Categories <span class='caret'></span>
        <% end %>
        <ul class="dropdown-menu">  
          <% @categories.each do |category| %>
            <li><%= link_to category.name, category_path(category) %></li>
          <%end%>
          <hr>
          <li>
            <%= link_to(new_category_path) do %>
              <i class='glyphicon glyphicon-plus'></i> New Category 
            <%end%>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>