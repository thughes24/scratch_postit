<h1>Log in:</h1> 
<%= form_tag '/' do %>
  <div class="control-group">
    <%= label_tag :username %> 
    <%= text_field_tag(:username,"username",{class: "control-input"})%>
  </div>
  <div class="control-group">
    <%= label_tag :password %> 
    <%= password_field_tag(:password,"password",{class: "control-input"})%>
  </div>
  <%= submit_tag "Log In", class: "btn btn-lg btn-primary" %>
<% end %>
<%= link_to "Back", :back %>